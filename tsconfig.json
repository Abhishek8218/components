{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext","es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmit": false,  // Allow emitting compiled JavaScript files
    "outDir": "./dist",  // Output directory for compiled files
    "declaration": true,  // Generate .d.ts files for TypeScript definitions
    "declarationMap": true,  // Generates source maps for declaration files
   
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*","next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules","dist"]
}
